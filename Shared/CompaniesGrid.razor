@using OrdersReaderBlazorApp.Data;


<Grid @ref="grid" TItem="Company" class="table table-hover table-bordered table-striped" DataProvider="CompaniesDataProvider" AllowFiltering="true" AllowPaging="true" PageSize="10" Responsive="true">
    <GridColumn TItem="Company" HeaderText="Company ID" PropertyName="companyId">
        @context.companyId
    </GridColumn>
    <GridColumn TItem="Company" HeaderText="Company Name" PropertyName="companyName">
        @context.companyName
    </GridColumn>
    <GridColumn TItem="Company" HeaderText="Company Address" PropertyName="companyAddress">
        @context.companyAddress
    </GridColumn>
    <GridColumn TItem="Company" HeaderText="Company Contact Person" PropertyName="companyContactPerson">
        @context.companyContactPerson
    </GridColumn>
    <GridColumn TItem="Company" HeaderText="Company Status" PropertyName="companyStatus">
        @context.companyStatus
    </GridColumn>

</Grid>

@code {


    [Parameter]
    public List<Company> companies { get; set; }

    BlazorBootstrap.Grid<Company> grid;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
    }

    private async Task<GridDataProviderResult<Company>> CompaniesDataProvider(GridDataProviderRequest<Company> request)
    {
        return await Task.FromResult(request.ApplyTo(companies));
    }
}


